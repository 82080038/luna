# Luna System Environment Configuration
# Copy this file to .env and update the values accordingly

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/luna

# Database Configuration
DB_HOST=localhost
DB_NAME=sistem_angka
DB_USER=root
DB_PASS=your_secure_password_here

# Security Configuration
APP_KEY=your_32_character_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
ALLOWED_ORIGINS=*
# For production, use specific domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_TIME_WINDOW=3600

# Session Configuration
SESSION_TIMEOUT=1800
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@lunaSystem.com
MAIL_FROM_NAME="Luna System"

# Logging
LOG_LEVEL=info
LOG_FILE=logs/luna.log

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# SMS Gateway (optional)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30